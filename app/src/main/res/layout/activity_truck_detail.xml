                    android:hint="Enter Driver Name"
                    android:inputType="textCapCharacters"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_driver_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"/>


            <TextView android:id="@+id/tv_driver_id"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="DRIVER ID/PASSPORT"
                      app:layout_constraintTop_toBottomOf="@id/et_driver_name"
                      app:layout_constraintStart_toStartOf="@id/guideline"
                      android:layout_marginTop="5dp"/>

            <EditText
                    android:id="@+id/et_driver_id"
                    android:layout_width="0dp"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Driver Id"
                    android:inputType="textCapCharacters"
