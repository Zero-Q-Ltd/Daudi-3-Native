<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/layout_constraint"
                android:layout_height="match_parent"
                tools:context=".ui.truck_detail.TruckDetailActivity">

            <TextView android:id="@+id/tv_today_date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="7/8/19, 4:58 PM"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="16dp"/>

            <ImageView android:id="@+id/iv_mk_logo"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logo_black"
                       app:layout_constraintTop_toBottomOf="@id/tv_today_date"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:layout_marginTop="16dp"/>

            <TextView android:id="@+id/tv_company_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="EMKAY INTERNATIONAL LTD"
                      app:layout_constraintTop_toBottomOf="@id/iv_mk_logo"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="16dp"/>

            <TextView android:id="@+id/tv_loading_order"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="LOADING ORDER"
                      app:layout_constraintTop_toBottomOf="@id/tv_company_name"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="16dp"/>


            <TextView android:id="@+id/tv_truck_id"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/tv_loading_order"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="5dp"
                      android:text="MK0390"/>

            <TextView android:id="@+id/tv_depot_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@id/tv_truck_id"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      android:layout_marginTop="5dp"
                      android:text="[ GULF SBOX ]"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="16dp"
                    android:orientation="vertical"/>


            <View android:id="@+id/v_top_separator"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:background="@color/colorDivider"
                  app:layout_constraintTop_toBottomOf="@id/tv_depot_name"
                  android:layout_marginTop="16dp"
                  android:layout_marginRight="16dp"
                  app:layout_constraintLeft_toLeftOf="@id/guideline"/>


            <TextView android:id="@+id/tv_customer"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="CUSTOMER"
                      app:layout_constraintTop_toBottomOf="@id/v_top_separator"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintStart_toStartOf="@id/guideline"
                      android:layout_marginTop="16dp"/>


            <TextView
                    android:id="@+id/tv_customer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAFUKO MERU"
                    app:layout_constraintTop_toBottomOf="@id/tv_customer"
                    app:layout_constraintStart_toStartOf="@id/barrier"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_customer"
                    android:layout_marginStart="16dp"/>

            <TextView android:id="@+id/tv_driver_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="DRIVER NAME"
                      app:layout_constraintTop_toBottomOf="@id/tv_customer"
                      app:layout_constraintLeft_toLeftOf="@id/guideline"
                      android:layout_marginTop="10dp"/>


            <EditText
                    android:id="@+id/et_driver_name"
                    android:layout_width="0dp"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Driver Name"
                    android:inputType="textCapCharacters"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_driver_name"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_driver_name"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"/>


            <TextView android:id="@+id/tv_driver_id"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="DRIVER ID/PASSPORT"
                      app:layout_constraintTop_toBottomOf="@id/et_driver_name"
                      app:layout_constraintStart_toStartOf="@id/guideline"
                      android:layout_marginTop="5dp"/>

            <EditText
                    android:id="@+id/et_driver_id"
                    android:layout_width="0dp"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Driver Id"
                    android:inputType="textCapCharacters"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_driver_id"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_driver_id"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"/>

            <TextView android:id="@+id/tv_driver_plate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="NUMBER PLATE"
                      app:layout_constraintTop_toBottomOf="@id/et_driver_id"
                      app:layout_constraintStart_toStartOf="@id/guideline"
                      android:layout_marginTop="5dp"/>


            <EditText
                    android:id="@+id/et_driver_plate"
                    android:layout_width="0dp"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Number Plate"
                    android:inputType="textCapCharacters"
                    app:layout_constraintLeft_toLeftOf="@id/barrier"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_driver_plate"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_driver_plate"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"/>


            <View android:id="@+id/v_sale_separator"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:background="@color/colorDivider"
                  app:layout_constraintTop_toBottomOf="@id/tv_driver_plate"
                  android:layout_marginTop="16dp"
                  android:layout_marginEnd="16dp"
                  app:layout_constraintLeft_toLeftOf="@id/guideline"/>


            <TextView android:id="@+id/tv_sale_order"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="SALE ORDER"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/v_sale_separator"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>


            <TextView android:id="@+id/tv_product"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="PRODUCT"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_sale_order"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>

            <TextView android:id="@+id/tv_entry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="ENTRY NUMBER"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_sale_order"
                      app:layout_constraintStart_toStartOf="@id/barrier"
                      android:layout_marginStart="16dp"/>


            <TextView android:id="@+id/tv_pms"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="PMS [ 1000 ]"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_product"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>

            <TextView android:id="@+id/tv_pms_entry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="018ASDCJ113"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_pms"
                      app:layout_constraintStart_toStartOf="@id/barrier"
                      android:layout_marginStart="16dp"
                      app:layout_constraintBaseline_toBaselineOf="@id/tv_pms"/>

            <TextView android:id="@+id/tv_ago"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="AGO [ 0 ]"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_pms"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>

            <TextView android:id="@+id/tv_ago_entry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="*******"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_ago"
                      app:layout_constraintStart_toStartOf="@id/barrier"
                      android:layout_marginStart="16dp"
                      app:layout_constraintBaseline_toBaselineOf="@id/tv_ago"/>


            <TextView android:id="@+id/tv_ik"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="IK      [ 0 ]"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_ago"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>

            <TextView android:id="@+id/tv_ik_entry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="*******"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_ik"
                      app:layout_constraintStart_toStartOf="@id/barrier"
                      android:layout_marginStart="16dp"
                      app:layout_constraintBaseline_toBaselineOf="@id/tv_ik"/>


            <View android:id="@+id/v_compartments_separator"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:background="@color/colorDivider"
                  app:layout_constraintTop_toBottomOf="@id/tv_ik"
                  android:layout_marginTop="16dp"
                  android:layout_marginEnd="16dp"
                  app:layout_constraintLeft_toLeftOf="@id/guideline"/>


            <TextView android:id="@+id/tv_compartments"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="COMPARTMENTS DETAILS"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/v_compartments_separator"
                      app:layout_constraintStart_toStartOf="@id/guideline"/>


            <TextView android:id="@+id/tv_c1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="COMP 1"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/tv_compartments"
                      app:layout_constraintStart_toStartOf="@id/guideline"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintEnd_toStartOf="@+id/et_c1_type"/>


            <EditText
                    android:id="@+id/et_c1_type"
                    android:layout_width="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Driver Id"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"
                    tools:layout_editor_absoluteY="627dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_c1"
                    app:layout_constraintEnd_toStartOf="@+id/et_c1_qty"
                    app:layout_constraintTop_toBottomOf="@id/tv_compartments"/>

            <EditText
                    android:id="@+id/et_c1_qty"
                    android:layout_width="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Driver Id"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"
                    tools:layout_editor_absoluteY="627dp"
                    app:layout_constraintStart_toEndOf="@+id/et_c1_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compartments"/>


            <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:constraint_referenced_ids="tv_customer, tv_driver_name, tv_driver_id"
            />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>