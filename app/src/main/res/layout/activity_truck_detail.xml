                    style="?android:attr/borderlessButtonStyle"/>

            <EditText
                    android:id="@+id/et_c7_qty"
                    android:layout_width="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@color/grey_500"
                    android:hint="Enter Amount"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_500"
                    tools:layout_editor_absoluteY="627dp"
                    app:layout_constraintStart_toEndOf="@+id/et_c7_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_c6"
                    android:layout_marginEnd="16dp"/>


            <View android:id="@+id/v_bottom_separator"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:background="@color/colorDivider"
                  app:layout_constraintTop_toBottomOf="@id/tv_c7"
                  android:layout_marginTop="16dp"
                  android:layout_marginRight="16dp"
                  app:layout_constraintLeft_toLeftOf="@id/guideline"/>


            <TextView android:id="@+id/tv_auth_by"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="AUTHORIZED BY"
                      app:layout_constraintLeft_toLeftOf="@id/guideline"
                      app:layout_constraintTop_toBottomOf="@id/v_bottom_separator"
                      android:layout_marginTop="16dp"/>


            <TextView android:id="@+id/tv_auth_by_value"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="KAMANA KISINGA"
                      app:layout_constraintLeft_toLeftOf="@id/barrier"
                      app:layout_constraintTop_toBottomOf="@id/v_bottom_separator"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="16dp"/>


            <TextView android:id="@+id/tv_confirmed_by"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="AUTHORIZED BY"
                      app:layout_constraintLeft_toLeftOf="@id/guideline"
                      app:layout_constraintTop_toBottomOf="@id/tv_auth_by"
                      android:layout_marginTop="16dp"/>


            <TextView android:id="@+id/tv_confirmed_by_value"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="KAMANA KISINGA"
                      app:layout_constraintLeft_toLeftOf="@id/barrier"
                      app:layout_constraintTop_toBottomOf="@id/tv_auth_by"
                      android:layout_marginStart="16dp"
                      android:layout_marginTop="16dp"/>


            <TextView android:id="@+id/tv_signature"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="SIGNITURE"
                      app:layout_constraintLeft_toLeftOf="@id/guideline"
                      app:layout_constraintTop_toBottomOf="@id/tv_confirmed_by_value"
                      android:layout_marginTop="32dp"/>


            <View android:id="@+id/v_signature"
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:background="#000"
                  app:layout_constraintLeft_toLeftOf="@id/barrier"
                  app:layout_constraintTop_toBottomOf="@id/tv_confirmed_by_value"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="32dp"
                  android:layout_marginEnd="16dp"
                  app:layout_constraintBaseline_toBaselineOf="@id/tv_signature"
                  app:layout_constraintRight_toRightOf="parent"/>


            <ImageView android:id="@+id/qr"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/v_signature"
                       android:layout_marginBottom="16dp"
                       android:layout_marginTop="32dp"/>


            <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:constraint_referenced_ids="tv_customer, tv_driver_name, tv_driver_id, tv_auth_by"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPrint"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/qr"
                    android:layout_marginTop="32dp"
                    app:layout_constraintLeft_toLeftOf="@id/guideline"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    android:text="print"
                    app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>